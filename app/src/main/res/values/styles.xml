<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Olive</item>
        <item name="colorPrimaryDark">@color/float_transparent</item>
        <item name="android:windowBackground">@drawable/paralax</item>
        <item name="android:navigationBarColor">@color/float_transparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Button.Switch" parent="android:Widget">
        <item name="android:background">@drawable/btn_toggle</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>




</resources>
